{
  "name": "bat-ratios",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "precommit": "npm test",
    "lint": "standard",
    "lint-fix": "npm run lint -- --fix",
    "test": "npm run lint && npm run test-versions",
    "test-versions": "npm run test-v1",
    "test-v1": "ava --timeout=1000s -v ./test/v1/index.test.js -m 'can retrieve previous days'",
    "start": "npm run serve",
    "serve": "node ./index.js",
    "docker-build": "docker-compose build",
    "docker-test": "docker-compose run --rm -v $(pwd)/test:/usr/src/app/test ratios-web npm test",
    "docker-up": "docker-compose -f docker-compose.yml up ratios-web",
    "docker-up-db": "docker-compose -f docker-compose.yml up -d ratios-postgres",
    "docker-migrate-up": "docker-compose -f docker-compose.yml run --rm -w /usr/src/app ratios-web ./bin/up.sh",
    "docker-migrate-down": "docker-compose -f docker-compose.yml run --rm -w /usr/src/app ratios-web ./bin/down.sh"
  },
  "author": {
    "name": "Michael McLaughlin",
    "email": "mmclaughlin@brave.com"
  },
  "repository": "git@github.com:brave-intl/bat-ratios.git",
  "license": "ISC",
  "dependencies": {
    "@brave-intl/currency": "^1.6.0",
    "@sentry/node": "^5.18.1",
    "ava": "^3.10.1",
    "debug": "^4.1.1",
    "dotenv": "^6.2.0",
    "express": "^4.17.1",
    "express-bearer-token": "^2.4.0",
    "express-boom": "^2.0.0",
    "express-joi-validation": "^0.3.0",
    "express-prom-bundle": "^5.1.5",
    "express-request-csv": "^1.0.1",
    "joi": "^13.7.0",
    "joi-to-json-schema": "^3.5.0",
    "json2csv": "^4.5.4",
    "lodash": "^4.17.19",
    "pg": "^7.18.2",
    "prom-client": "^11.5.3",
    "uuid": "^3.4.0"
  },
  "devDependencies": {
    "husky": "^0.14.3",
    "standard": "^14.3.4",
    "supertest": "^3.4.1",
    "swagger-ui-express": "^4.1.4"
  },
  "standard": {
    "ignore": [
      "config.js"
    ]
  }
}
